{
	"name": "warframe-alerts",
	"productName": "Warframe Alerts",
	"description": "Warframe alert notifications that are filterable",
	"version": "0.1.4",
	"author": "SavageCore <talk@savagecore.eu>",
	"copyright": "Â© 2017, SavageCore",
	"homepage": "http://savagecore.eu",
	"license": "MIT",
	"main": "app/background.js",
	"repository": "github:SavageCore/warframe-alerts",
	"build": {
		"appId": "eu.savagecore.warframe-alerts",
		"files": [
			"app/**/*",
			"node_modules/**/*",
			"package.json"
		],
		"publish": [
			{
				"provider": "github",
				"owner": "SavageCore",
				"repo": "warframe-alerts"
			}
		]
	},
	"ava": {
		"concurrency": 5,
		"failFast": true,
		"require": "babel-core/register",
		"babel": {
			"testOptions": {
				"presets": [
					"@ava/stage-4",
					"@ava/transform-test-files"
				],
				"babelrc": false
			}
		}
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"pretest": "webpack --config=build/webpack.app.config.js --env=test --display=errors-only",
		"test-old": "xo && nyc ava && nyc report --reporter=text-lcov > coverage.lcov && codecov -t 2a1291c2-2f6d-41f1-bdde-175a377fcbbf",
		"test": "nyc ava && nyc report --reporter=text-lcov > coverage.lcov && codecov -t 2a1291c2-2f6d-41f1-bdde-175a377fcbbf",
		"start": "node build/start.js",
		"start-pro": "node build/start.js --env=production",
		"release": "npm test && webpack --config=build/webpack.app.config.js --env=production && build  --win -p always"
	},
	"dependencies": {
		"@sindresorhus/is": "^0.8.0",
		"auto-launch": "^5.0.5",
		"electron-context-menu": "^0.9.1",
		"electron-log": "^2.2.14",
		"electron-process-manager": "^0.5.1",
		"electron-store": "^1.3.0",
		"electron-unhandled": "^1.1.0",
		"electron-updater": "^2.21.8",
		"fs-jetpack": "^1.3.0",
		"got": "^8.3.1",
		"is-online": "^7.0.0",
		"make-dir": "^1.2.0",
		"materialize-css": "^0.100.2",
		"minimist": "^1.2.0",
		"os-locale": "^2.1.0",
		"spectron": "^3.8.0",
		"ucfirst": "^1.0.0",
		"unix-timestamp": "^0.2.0",
		"warframe-worldstate-parser": "^2.0.0"
	},
	"devDependencies": {
		"@ava/babel-preset-stage-4": "^2.0.0-beta.5",
		"@ava/babel-preset-transform-test-files": "^4.0.0-beta.4",
		"@babel/cli": "^7.0.0-beta.46",
		"@babel/core": "^7.0.0-beta.46",
		"@babel/preset-env": "^7.0.0-beta.46",
		"ava": "^0.25.0",
		"babel-loader": "^8.0.0-beta.2",
		"babel-plugin-transform-object-rest-spread": "^7.0.0-beta.3",
		"babel-preset-env": "^1.6.1",
		"codecov": "^3.0.1",
		"css-loader": "^0.28.11",
		"devtron": "^1.4.0",
		"electron": "^2.0.0",
		"electron-builder": "^20.11.1",
		"friendly-errors-webpack-plugin": "^1.7.0",
		"less": "^3.0.2",
		"less-loader": "^4.1.0",
		"mini-css-extract-plugin": "^0.4.0",
		"nyc": "^11.7.1",
		"source-map-support": "^0.5.5",
		"style-loader": "^0.21.0",
		"webpack": "^4.6.0",
		"webpack-cli": "^2.1.2",
		"webpack-merge": "^4.1.2",
		"webpack-node-externals": "^1.7.2",
		"xo": "^0.20.3"
	}
}
